<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert Book Details"
        android:gravity="center_horizontal"
        android:editable="false"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Book Title"
        android:id="@+id/createSellListingBookTitle"
        android:inputType="textCapWords"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Author"
        android:id="@+id/createSellListingBookAuthor"
        android:inputType="textCapWords"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="10 or 13 ISBN Number"
        android:id="@+id/createSellListingISBNNumber"
        android:inputType="phone"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Year"
        android:id="@+id/createSellListingBookYear"
        android:inputType="phone"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edition Number"
        android:id="@+id/createSellListingBookEdition"
        android:inputType="phone"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert Selling Information"
        android:gravity="center_horizontal"
        android:editable="false"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Offering price"
        android:id="@+id/createSellListingBookPrice"
        android:inputType="number|numberDecimal"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/bookConditionNew"
        android:text="New"
        android:onClick="onCheckboxClicked"
        android:layout_weight="0.26" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/bookConditionUsed"
        android:text="Used"
        android:onClick="onCheckboxClicked"
        android:layout_weight="0.26" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Comment"
        android:id="@+id/createSellListingBookComment"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:id="@+id/createListingIsHardCover"
        android:text="Hard Cover"
        android:onClick="onCheckboxClicked"

        android:checked="false" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createSellListingButton"
        android:text="Create"
        />

</LinearLayout>
