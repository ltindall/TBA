<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_border"
    android:gravity="center_horizontal">
<!--#46008B-->
    <TextView
        android:id="@+id/popup_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <TextView
        android:id="@+id/popup_author"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <TextView
        android:id="@+id/popup_isbn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <TextView
        android:id="@+id/popup_year"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <TextView
        android:id="@+id/popup_edition"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <TextView
        android:id="@+id/popup_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <TextView
        android:id="@+id/popup_condition"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <TextView
        android:id="@+id/popup_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <TextView
        android:id="@+id/popup_hardcover"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/popup_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market History"
        android:gravity="center_horizontal"/>

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/popup_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact a Person"
        android:gravity="center_horizontal"/>

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/popup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:gravity="center_horizontal"/>

</LinearLayout>